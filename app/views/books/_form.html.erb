<%= form_for (@book) do |f| %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :publisher %><br>
  <%= f.text_field :publisher %>
</div>
<div class="field">
  <%= f.label :no_of_books %><br>
  <%= f.text_field :no_of_books %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :phone %><br>
  <%= f.text_field :phone %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<%end%>